{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "includes": ["src/**/*.{ts,tsx,js,jsx,json}", "*.{ts,js,json}"],
    "experimentalScannerIgnores": [
      "node_modules",
      "dist",
      "build",
      "coverage",
      ".next",
      ".nuxt",
      ".vercel",
      "*.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "noDefaultExport": "off",
        "useConst": "error",
        "useTemplate": "error",
        "useImportType": "error",
        "useConsistentArrayType": "error",
        "useFilenamingConvention": "error",
        "noUnusedTemplateLiteral": "error"
      },
      "suspicious": {
        "noConsole": "info",
        "noExplicitAny": "warn",
        "noDoubleEquals": "error"
      },
      "performance": {
        "noBarrelFile": "error",
        "noAccumulatingSpread": "error",
        "noDelete": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  },

  "overrides": [
    {
      "includes": ["src/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ],
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":BLANK_LINE:",
              ":PACKAGE_WITH_PROTOCOL:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              "@/assets/**",
              ":BLANK_LINE:",
              ":ALIAS:",
              ":BLANK_LINE:"
            ]
          }
        }
      }
    }
  }
}
